{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"skipLibCheck": true,
		"composite": true,
		"declaration": true,
		"outDir": "dist",
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"types": ["vite/client"],
		"paths": {
			"@mnc/shared": ["../../packages/shared/src"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"references": [{ "path": "../../packages/shared" }]
}
