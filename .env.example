# Cloudflare R2 credentials (used by r2-sync and r2-manifest scripts)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=mnc-resources

# CDN base URL for content (set during build for production)
# Leave empty for local dev (Vite proxy handles /contents → R2)
VITE_CDN_BASE_URL=https://cdn.mnc.achus.casa

# CMS API URL (set during build for production)
# Leave empty for local dev (Vite proxy handles /api → cms-worker)
VITE_CMS_API_URL=https://cms.achus.casa

# CMS Worker secrets
BETTER_AUTH_SECRET=
RESEND_API_KEY=

# Cloudflare Pages (used by deploy-app workflow)
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=
